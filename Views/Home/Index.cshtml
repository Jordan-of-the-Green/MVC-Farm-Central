@{
    ViewData["Title"] = "Home Page";
}

@*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

<div class="text-center">
    <html>

    @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

    <style type="text/css">
        .btn-group {
            width: 140px;
            display: inline-block;
            background-color: #fff;
            height: 140px;
            border-radius: 5px;
            padding-top: 2.5rem;
            margin: 0 12px;
            text-align: center;
            text-decoration: none;
            box-shadow: 0 4px 17px 1px #ddd;
            transition-duration: .3s;
            transition-timing-function: cubic-bezier(.4,0,.2,1);
        }

        a.btn-group {
            background-color: #fff;
            text-decoration: none !important;
            transform: translateY(-0.45rem);
            box-shadow: 0 0.25rem 0.75rem rgb(30 34 40 / 15%);
            transition-duration: .3s;
            transition-timing-function: cubic-bezier(.4,0,.2,1);
            --tw-scale-x: 1.05;
            --tw-scale-y: 1.05;
        }

        .btn-group p:hover {
            color: #3d3d3d !important;
        }

        .btn-group p {
            text-align: center;
            color: #3d3d3d;
            padding-top: 10px;
            font-size: 14px;
            font-weight: 600;
        }

        .btn-group img {
            width: unset;
            height: 35px;
        }

        .btn-group span {
            text-align: center;
            color: #273043;
            padding-top: 10px;
            font-size: 14px;
            font-weight: 600;
            display: block;
        }


        /* Clear floats (clearfix hack) */
        .btn-group:after {
            content: "";
            clear: both;
            display: table;
        }

        /* Add a background color on hover */
        .btn-group button:hover {
            background-color: #008CBA;
            color: white;
        }

        .btn-group .tooltiptext {
            visibility: hidden;
            width: 120px;
            background-color: #2b2b2b;
            color: #fff !important;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            position: absolute;
            z-index: 1;
            bottom: 105%;
            left: 50%;
            margin-left: -60px;
            font-size: 12px;
        }

            .btn-group .tooltiptext::after {
                content: "";
                position: absolute;
                top: 100%;
                left: 50%;
                margin-left: -5px;
                border-width: 5px;
                border-style: solid;
                border-color: black transparent transparent transparent;
                color: #fff;
            }


        .btn-group:hover .tooltiptext {
            visibility: visible;
            color: #fff !important;
            padding: 5px;
            font-size: 10px;
        }

        .btn-group img {
            width: unset;
            height: 24px;
        }

        .btn-group span {
            text-align: center;
            color: #273043;
            padding-top: 10px;
            font-size: 14px;
            font-weight: 600;
            display: block;
        }

        a.btn-group:hover span {
            color: #3e3e3e !important;
        }

        .footer-logo ul li a img {
            padding: 10px;
            height: 52px;
        }

     

        .btn-group img {
            width: unset;
            height: 45px;
        }

    </style>

    @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

    <body>
        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

        <div class="logo-box">
            <img src="~/css/1.2.png"
         
                 style="width: 800px!immportant; height: 300px;">
        </div>

        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

        <h1>
            Login As <br>
        </h1>

        <h1>
          <br>
        </h1>

        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

        <a class="1 btn-group" asp-area="" asp-controller="EmployeeUsers" asp-action="Login">
            <img src="~/css/1.2.png" />
            <span id="menuHeading">Employee</span>
            <span class="tooltiptext">
                The Employee button enables you to register/login to access important information.
            </span>
        </a>

        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@
        <a class="1 btn-group" asp-area="" asp-controller="FarmerUsers" asp-action="Login">
            <img src="~/css/1.2.png" />
            <span id="menuHeading">Farmer</span>
            <span class="tooltiptext">
                The Farmer button enables you to register/login to access important information.
            </span>
        </a>

        @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

    </body>

    @*----------------------------------------------------------------------------------------------------------------------------------------------------------------------------------*@

</html>
</div>
